{% extends 'front.html.twig' %}

{% block front %}
    <div class="row">
        <div class="col-12">
            <h3 class="mb-5">Invités</h3>
            <div class="guests d-flex flex-column">
                {% for data in guestsData %}
                    <div class="guest py-5 d-flex justify-content-between align-items-center">
                        <h4>{{ data.guest.name }} ({{ data.activeMediasCount }})</h4>
                        <a href="{{ path('guest', {id: data.guest.id}) }}">découvrir</a>
                    </div>
                {% endfor %}
            </div>

            <nav aria-label="Page navigation">
                <ul class="pagination">
                    {% if currentPage > 1 %}
                        <li class="page-item">
                            <a class="page-link" href="{{ path('guests', {page: 1}) }}">Première page</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="{{ path('guests', {page: currentPage - 1}) }}">Précédent</a>
                        </li>
                    {% endif %}

                    {% for i in range(max(1, currentPage - 3), min(totalPages, currentPage + 3)) %}
                        <li class="page-item {% if i == currentPage %}active{% endif %}">
                            <a class="page-link" href="{{ path('guests', {page: i}) }}">{{ i }}</a>
                        </li>
                    {% endfor %}

                    {% if currentPage < totalPages %}
                        <li class="page-item">
                            <a class="page-link" href="{{ path('guests', {page: currentPage + 1}) }}">Suivant</a>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="{{ path('guests', {page: totalPages}) }}">Dernière page</a>
                        </li>
                    {% endif %}
                </ul>
            </nav>
        </div>
    </div>
{% endblock %}
